rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️ Règles ouvertes pour usage personnel / démo (pas pour la prod)
    match /users/{userId} { allow read, write: if true; }
    match /listes/{userId} {
      allow read, write: if true;
      match /items/{itemId} { allow read, write: if true; }
    }
    match /cagnotte/{docId} { allow read, write: if true; }
    match /depenses/{docId} { allow read, write: if true; }
    match /notes/{userId} { allow read, write: if true; }
    match /anniversaires/{userId}/{docId} { allow read, write: if true; }
    match /stats/{docId} { allow read, write: if true; }
    match /mots/{userId} {
      allow read, write: if true;
      match /items/{msgId} { allow read, write: if true; }
    }
  }
}
